SUBDIRS = $(filter-out Makefile polyorb-hi-c polyorb-hi-ada, $(wildcard *))

all:
	set -e; for d in $(SUBDIRS); do $(MAKE) -C $$d ; done

coverage:
	-rm lcov.args
	touch lcov.args
	for d in $(SUBDIRS); do \
		lcov -c -i -d $$d -o coverage.$$d ;\
		lcov -c -d $$d -o coverage.$$d ;\
		echo "-a coverage.$$d " >> lcov.args ;\
	done
	lcov `cat lcov.args` -o coverage.total
	genhtml --no-branch-coverage -o ../gcov_output coverage.total
	rm lcov.args coverage.*

clean:
	set -e; for d in $(SUBDIRS); do $(MAKE) clean -C $$d ; done
